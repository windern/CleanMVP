<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.windern.cleanmvp">

    <application
        android:name=".presentation.AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".presentation.temp.TempActivity" />
        <activity android:name=".presentation.note.NoteActivity" />
        <activity
            android:name=".presentation.recyclerview.RecyclerViewPracticeActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".presentation.viewgroup.ViewGroupActivity" />
        <activity
            android:name=".presentation.search.SearchActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".presentation.search.SearchResultsActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.loading.LoadingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>